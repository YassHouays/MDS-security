<%- include('../../components/header'); -%>

<div class="flex flex-col px-6 lg:px-48 mt-12">
    <div style="background-image: url(images/banners/course_banner_bg.jpg);background-position: top center;background-size: cover;" class="h-64 px-6 w-full rounded-lg flex flex-col flex-wrap justify-center">
        <h3 class="text-gray-100 text-3xl font-semibold">Bienvenue sur la liste des produits</h3>
        <p class="mt-2 text-lg leading-relaxed text-gray-500">Recherchez et suivez tous les produits en cours.</p>
    </div>
</div>


<div class="px-6 lg:px-24 pb-6 h-auto my-10">
    <div class="items-container mt-5 filter-btn-group">
        <div class="flex justify-between">
            <div class="flex">
                <a data-filter="all" class="filter-item text-gray-800 uppercase font-bold cursor-pointer flex items-center text-primary-700 mr-4">Tout</a>
                <a data-filter="other" class="filter-item text-gray-800 uppercase font-bold cursor-pointer flex items-center">Pour moi</a>
            </div>
            
            <div class="filter-item text-gray-800 uppercase font-bold cursor-pointer flex items-center">
                    <a href="<%= options.base_url %>produits/creation" class="">
                        <span class="ml-2">Cr√©er un produit</span>
                    </a>
            </div>
        </div>
        
        <div class="mt-10">
            <div class="flex flex-wrap">
                <% data.produits.forEach(function(produits) { %>
                    <%= JSON.stringify(produits.url) %>
                    <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/4 article-item" data-category="">
                        <div class="bg-white rounded-lg overflow-hidden shadow relative">
                            <div class="h-56 wrap_banner" style="background: url('<%= produits.cover %>');background-position: center center;background-size: cover;"></div>
                            <div class="p-4 h-auto">
                                <a href="/produits/<%= produits.id %>" class="block text-primary-700 hover:text-primary-600 font-semibold mb-2 text-lg md:text-base lg:text-lg"><%= produits.name %></a>
                                <div class="text-gray-600 text-sm leading-relaxed block md:text-xs lg:text-sm"><%= produits.description %></div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer'); -%>